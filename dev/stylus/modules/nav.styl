/*!-----------------------------------------------------------------
  .nav - модуль навигации
 -----------------------------------------------------------------*/
.nav
	margin 0
	padding 0
	display flex
	&__link
		display block
		text-decoration none
		padding: 4px 10px
		color #fff
		&:hover
			color #fff
		&.is-active
			background-color #687179
			color themeDefaultIsActiveColor
	&.is-show
		top 0
		left 0
		position fixed
		width 100%
		height 100vh
		background rgb(51,153,204)
		z-index 1
		flex-direction column
		align-items center
		justify-content center
		font-size 1.5rem
