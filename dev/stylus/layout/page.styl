 -----------------------------------------------------------------*/
#l-jumbotron
	position relative
	width 100%
	min-height 100vh
#l-about
	@extend .l-padding
	padding-top 40px
	.l-row
		display flex
		justify-content space-between
		// +mema(700px)
		@media screen and (max-width: 700px)
			flex-direction column
		.l-col
			width 48%
			// +mema(700px)
			@media screen and (max-width: 700px)
				width 100%
				&:nth-child(1)
					margin-bottom 20px
	h2
		color var(--colorBlack)
		font-size 2rem
	img
		object-fit: cover
		width 100%
		height 100%
		display block
#l-menu
	@extend .l-padding
	header
		text-align center
	.l-content
		display flex
		justify-content center
		flex-direction row
		flex-wrap wrap
		margin-top 30px
		.l-box
			width 340px
			margin 20px
			border 15px solid #fff
			box-shadow 0 5px 35px rgba(0, 0, 0, .08)
			// +mema(sizeMedium)
			@media screen and (max-width: 800px)
				width calc(50% - 40px)
			// +mema(700px)
			@media screen and (max-width: 700px)
				width 340px
			img
				width 100%
				height 300px
				object-fit cover
				display block
			h3
				padding 15px 0 5px
				margin-bottom 0
				font-weight 500
				color var(--colorBlack)
			// +mema(xl)
			// 	width 300px
	.l-footer
		text-align center
		padding-top 20px
		.btn
			display inline-block
#l-expert
	@extend .l-padding
	header
		color var(--colorBlack)
		text-align center
	.l-content
		display flex
		justify-content center
		flex-wrap wrap
		flex-direction row
		margin-top 40px
		// +mema(sizeMedium)
		@media screen and (max-width: 800px)
			justify-content space-between
		.l-box
			width 250px
			margin 15px
			// +mema(sizeMedium)
			@media screen and (max-width: 800px)
				width calc(50% - 10px)
				margin 0
			img
				width 100%
				height 300px
				object-fit cover
				@media screen and (max-width: 480px)
					height 200px
				@media screen and (max-width: 375px)
					height 180px
			h3
				padding-top 15px
				margin 0
				font-weight 600
				color var(--colorBlack)
				// +mema(sizeMedium)
				@media screen and (max-width: 800px)
					padding 5px 0 20px 0
					text-align center
#l-testimonials
	background url(../img/bg2.jpg)
	background-size cover
	@extend .l-padding
	header
		color var(--colorWhite)
		text-align center
		p
			color var(--colorWhite)
	.l-content
		display flex
		justify-content center
		flex-wrap wrap
		flex-direction row
		margin-top 40px
		.l-box
			width 340px
			margin 20px
			padding 40px
			background var(--colorWhite)
			display flex
			justify-content center
			align-items center
			flex-direction column
			img
				width 80px
				height 80px
				margin 0 auto 20px auto
				object-fit cover
				border-radius 50%
			p
				text-align center
				color #666
				font-style italic
			h3
				text-align center
				padding-top 10px
				font-weight 600
				font-size 1rem
				font-weight 800
				color var(--colorPink)
				margin-bottom 0
#l-contact
	@extend .l-padding
	background url(../img/bg3.jpg)
	background-size cover
	.l-contact-form
		fieldset
			border 0
			padding 75px 50px
			background var(--colorWhite)
			box-shadow 0 15px 30px rgba(0, 0, 0, .1)
			max-width 500px
			margin-top 30px
			display flex
			flex-direction column
			// +mema(480px)
			@media screen and (max-width: 480px)
				padding 50px 30px
			legend
				font-weight 700
				position relative
				top 75px
				// +mema(480px)
				@media screen and (max-width: 480px)
					top 50px
			input,
			textarea
				margin-bottom 20px
			.btn
				align-self flex-start
				// +mema(480px)
				@media screen and (max-width: 480px)
					width 100%
